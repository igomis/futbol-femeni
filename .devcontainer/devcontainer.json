{
    "name": "Laravel Sail (Codespaces)",
    "dockerComposeFile": [
        "docker-compose.override.yml"
    ],
    "service": "laravel.test",          // ðŸ‘ˆ forÃ§a a usar el servei correcte
    "workspaceFolder": "/var/www/html", // ðŸ‘ˆ on viu Laravel dins Sail
    "overrideCommand": false,

    // ConfiguraciÃ³ dâ€™usuari
    "remoteUser": "sail",               // ðŸ‘ˆ ara sÃ­, lâ€™usuari Sail que ja existeix en la imatge

    // Post create: prepara el projecte
    "postCreateCommand": "cp -n .env.example .env && composer install && php artisan key:generate && npm install && npm run build",

    // Ports exposats
    "forwardPorts": [80, 5173, 3306, 8025],
    "portsAttributes": {
        "80":   { "label": "Laravel" },
        "5173": { "label": "Vite" },
        "3306": { "label": "MySQL" },
        "8025": { "label": "Mailpit" }
    }
}



