{
    "name": "Laravel Sail (Dev Container)",
    "dockerComposeFile": ["../docker-compose.yml"],
    "service": "laravel.test",
    "workspaceFolder": "/var/www/html",
    "forwardPorts": [80, 5173],
    "portsAttributes": {
        "80":   { "label": "Laravel" },
        "5173": { "label": "Vite", "onAutoForward": "silent" }
    },
    "postCreateCommand": "cp -n .env.example .env && php artisan key:generate && npm ci && npm run build"
}
