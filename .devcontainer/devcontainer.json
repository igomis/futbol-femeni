{
    "name": "Laravel Sail (Codespaces)",
    "dockerComposeFile": [
        "docker-compose.override.yml"
    ],
    "service": "laravel.test",
    "workspaceFolder": "/var/www/html",
    "overrideCommand": false,

    "build": {
        "dockerfile": "Dockerfile"
    },

    "remoteUser": "sail",

    "postCreateCommand": "cp -n .env.example .env && composer install && php artisan key:generate && npm install && npm run build",

    "forwardPorts": [80, 5173, 3306, 8025],
    "portsAttributes": {
        "80":   { "label": "Laravel" },
        "5173": { "label": "Vite" },
        "3306": { "label": "MySQL" },
        "8025": { "label": "Mailpit" }
    }
}


